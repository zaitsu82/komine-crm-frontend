# ===========================================
# Vercel Production Environment Variables
# ===========================================

# ----------------------------------------------
# データソース設定
# ----------------------------------------------

# 本番環境ではバックエンドAPIを使用
NEXT_PUBLIC_USE_MOCK_DATA=false

# ----------------------------------------------
# API設定
# ----------------------------------------------

# Vercel プロキシ経由で Backend にアクセス（クロスオリジン Cookie 問題を回避）
# 自身の Vercel URL + /api/v1 を指定
NEXT_PUBLIC_API_URL=https://komine-cemetery-crm.vercel.app/api/v1

# Backend の実際の URL（next.config.ts のリライトで使用）
NEXT_PUBLIC_BACKEND_URL=https://komine-backend-crm-v1.onrender.com

# APIリクエストのタイムアウト（ミリ秒）
# Render 無料枠はコールドスタートがあるため長めに設定
NEXT_PUBLIC_API_TIMEOUT=60000

# ページネーションのデフォルト件数
NEXT_PUBLIC_DEFAULT_PAGE_LIMIT=50

# ----------------------------------------------
# デバッグ設定
# ----------------------------------------------

# 本番環境ではデバッグログを無効化
NEXT_PUBLIC_DEBUG=false
