# ===============================================
# 環境変数設定サンプル
# ===============================================
# このファイルを .env.local にコピーして使用してください。
# .env.local は Git管理外です。

# ----------------------------------------------
# データソース設定
# ----------------------------------------------

# モックデータ使用フラグ
# - true: ローカルのモックデータを使用（バックエンド不要）
# - false: バックエンドAPIを使用
NEXT_PUBLIC_USE_MOCK_DATA=true

# ----------------------------------------------
# API設定
# ----------------------------------------------

# バックエンドAPIのベースURL
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1

# APIリクエストのタイムアウト（ミリ秒）
NEXT_PUBLIC_API_TIMEOUT=30000

# ページネーションのデフォルト件数
NEXT_PUBLIC_DEFAULT_PAGE_LIMIT=50

# ----------------------------------------------
# デバッグ設定
# ----------------------------------------------

# デバッグログ出力フラグ
# - true: コンソールに詳細ログを出力
# - false: エラーログのみ出力
NEXT_PUBLIC_DEBUG=true

# ----------------------------------------------
# 認証設定（Supabase）
# ----------------------------------------------
# バックエンドとSupabaseを使用する場合に設定

# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
